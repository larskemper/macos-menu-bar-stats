{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Menu bar stats",
  "version": "0.1.0",
  "identifier": "com.lkemper.mac-menu-bar-stats",
  "build": {},
  "app": {
    "windows": [],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}